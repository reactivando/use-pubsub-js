{
  "name": "use-pubsub-js",
  "version": "1.0.7",
  "description": "A service and hooks for React to publish or subscribe",
  "author": "AZagatti",
  "license": "MIT",
  "repository": "reactivando/use-pubsub-js",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "jsnext:main": "dist/index.es.js",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest",
    "build": "rolldown -c && tsc -d --emitDeclarationOnly --noEmit false --declarationDir dist",
    "start": "rolldown -c -w",
    "deploy": "gh-pages -d example/build",
    "format": "prettier --write \"src/**/*.ts\" \"example/src/**/*.js\"",
    "lint": "eslint",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/pubsub-js": "^1.8.6",
    "pubsub-js": "^1.9.5"
  },
  "peerDependencies": {
    "@types/pubsub-js": "^1.8.2",
    "pubsub-js": "^1.9.3",
    "react": ">17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/runtime": "^7.28.4",
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-typescript": "^12.1.4",
    "@rollup/plugin-url": "^8.0.2",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.3.9",
    "eslint": "^9.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vitest": "^0.5.4",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "pubsub-js": "^1.9.3",
    "react": "^19.1.1",
    "rolldown": "1.0.0-beta.37",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,json,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
