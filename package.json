{
  "name": "use-pubsub-js",
  "version": "1.1.0",
  "description": "A service and hooks for React to publish or subscribe",
  "author": "AZagatti",
  "license": "MIT",
  "repository": "reactivando/use-pubsub-js",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hooks/usePublish": {
      "types": "./dist/hooks/usePublish.d.ts",
      "import": "./dist/hooks/usePublish.js",
      "require": "./dist/hooks/usePublish.cjs"
    },
    "./hooks/useSubscribe": {
      "types": "./dist/hooks/useSubscribe.d.ts",
      "import": "./dist/hooks/useSubscribe.js",
      "require": "./dist/hooks/useSubscribe.cjs"
    }
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest",
    "build": "tsdown",
    "deploy": "gh-pages -d example/dist",
    "format": "prettier --write \"src/**/*.ts\" \"example/src/**/*.js\"",
    "lint": "eslint",
    "prepare": "husky",
    "test:e2e": "pnpm build && cd e2e && pnpm install && pnpm test",
    "release": "release-it"
  },
  "dependencies": {
    "pubsub-js": "^1.9.3"
  },
  "peerDependencies": {
    "react": ">17.0.2"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@eslint/js": "^9.35.0",
    "@testing-library/react": "^16.3.0",
    "@types/pubsub-js": "^1.8.6",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.3.9",
    "eslint": "^9.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vitest": "^0.5.4",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "release-it": "^19.0.4",
    "release-it-pnpm": "^4.6.6",
    "tsdown": "^0.14.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,json,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
