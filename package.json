{
  "name": "use-pubsub-js",
  "version": "1.3.1",
  "description": "A service and hooks for React to publish or subscribe",
  "author": "AZagatti",
  "license": "MIT",
  "repository": "reactivando/use-pubsub-js",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./hooks/usePublish": {
      "import": {
        "types": "./dist/hooks/usePublish.d.ts",
        "default": "./dist/hooks/usePublish.js"
      },
      "require": {
        "types": "./dist/hooks/usePublish.d.cts",
        "default": "./dist/hooks/usePublish.cjs"
      }
    },
    "./hooks/useSubscribe": {
      "import": {
        "types": "./dist/hooks/useSubscribe.d.ts",
        "default": "./dist/hooks/useSubscribe.js"
      },
      "require": {
        "types": "./dist/hooks/useSubscribe.d.cts",
        "default": "./dist/hooks/useSubscribe.cjs"
      }
    },
    "./utils/debounce": {
      "import": {
        "types": "./dist/utils/debounce.d.ts",
        "default": "./dist/utils/debounce.js"
      },
      "require": {
        "types": "./dist/utils/debounce.d.cts",
        "default": "./dist/utils/debounce.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest",
    "build": "tsdown",
    "deploy": "gh-pages -d example/dist",
    "format": "prettier --write \"src/**/*.ts\" \"example/src/**/*.js\"",
    "lint": "eslint",
    "prepare": "husky",
    "test:e2e": "pnpm build && cd e2e && pnpm install && pnpm test",
    "release": "release-it"
  },
  "dependencies": {
    "pubsub-js": "^1.9.5"
  },
  "peerDependencies": {
    "react": ">17.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@release-it/conventional-changelog": "^10.0.4",
    "@testing-library/react": "^16.3.1",
    "@types/pubsub-js": "^1.8.6",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/eslint-plugin": "^1.5.2",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vitest": "^0.5.4",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "release-it": "^19.1.0",
    "release-it-pnpm": "^4.6.6",
    "tsdown": "^0.18.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{js,json,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
