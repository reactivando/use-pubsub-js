{
  "name": "use-pubsub-js",
  "version": "1.0.2",
  "description": "A service and hooks for React to publish or subscribe",
  "author": "AZagatti",
  "license": "MIT",
  "repository": "reactivando/use-pubsub-js",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "build": "rollup -c && tsc -d --emitDeclarationOnly --noEmit false --declarationDir dist",
    "start": "rollup -c -w",
    "prepare": "yarn run build && husky install",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "format": "prettier --write \"src/**/*.ts\" \"example/src/**/*.js\"",
    "lint": "eslint",
    "prepublishOnly": "yarn test && yarn run lint",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@types/pubsub-js": "^1.8.2",
    "debounce": "^1.2.1",
    "pubsub-js": "^1.9.3"
  },
  "peerDependencies": {
    "@types/pubsub-js": "^1.8.2",
    "debounce": "^1.2.1",
    "pubsub-js": "^1.9.3",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/runtime": "^7.13.17",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@rollup/plugin-url": "^6.0.0",
    "@testing-library/react-hooks": "^5.1.1",
    "@types/debounce": "^1.2.0",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cross-env": "^7.0.3",
    "debounce": "^1.2.1",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "pubsub-js": "^1.9.3",
    "react": "^17.0.2",
    "react-scripts": "^4.0.3",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.26.9",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "tslib": "^2.0.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,json,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ]
  }
}
